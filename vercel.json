{
  "version": 2,
  "buildCommand": "npm run build:shared && cd packages/client && npm run build",
  "outputDirectory": "packages/client/dist",
  "installCommand": "npm install",
  "framework": null,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/ws",
      "destination": "/api/ws"
    },
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ]
}
